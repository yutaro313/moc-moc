 <div class="col-7 mx-auto mt-3">
    <h5 class="text-white content-title p-4">サインアップ</h5>
    <div class="form-body p-4">
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true">名前</span>
        </div>
        <%= f.text_field :name, autofocus: true, :size => "100*100" %>
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true">メールアドレス</span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "90*90" %>
      </div>

      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true">パスワード</span>
        </div>
        <% if @minimum_password_length %>
        <%= f.password_field :password, autocomplete: "new-password", :size => "85*85" %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true">パスワード確認</span>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "90*90" %>
      </div>
      <hr>
      <%= f.submit 'サインアップ', class:"btn btn-lg btn-block btn-success mt-4" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
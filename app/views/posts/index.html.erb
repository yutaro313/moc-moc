<div class="text-dark">
  <div class="row  w-50 mx-auto mt-4">
    <h5 class="text-white mt-2">投稿一覧</h5>
    <%= link_to "新規投稿", new_post_path, class: 'btn btn-success new-button offset-9' %>
  </div>
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag post.customer, :image, fallback:"no-image.png", class:"mt-3 rounded-circle ml-4", size: "80x50" %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <%= link_to post_path(post.id) do %>
                <strong><span><%= post.title %></span></strong>
              <% end %>
            </p>
            <p class="card-text">説明：<%= post.caption %></p>
            <span><i class="fas fa-user"></i>By <%= link_to post.customer.name, customer_path(post.customer), class:'text-dark' %> |</span>
            <span><%= link_to "#{post.post_comments.count}コメント", post_path(post.id),class:"text-dark" %> |</span>
            <span><%= l post.created_at, class:'text-dark' %></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
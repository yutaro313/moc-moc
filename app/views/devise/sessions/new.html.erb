  <div class="col-7 mx-auto mt-3">
    <h5 class="text-white content-title p-4">ログイン</h5>
    <div class="form-body p-4">
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true">メールアドレス</span>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "90*90" %>
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" aria-hidden="true">パスワード</span>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", :size => "94*94" %>
      </div>
      <hr>
      <%= f.submit 'ログイン', class:"btn btn-lg btn-block btn-success mt-4" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
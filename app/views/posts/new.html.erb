<div class="container">
  <div class="row no-gutters">
    <div class="col-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="content-title text-white p-4 mb-0">投稿フォーム</h5>
      <div class="form-body p-4">

        <%= form_with model: @post, local:true do |f| %>
        <div class="input-group mb-3 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-paste"></i></span>
          </div>
          <%= f.text_field :title,class:"form-control", placeholder:"タイトル" %>
        </div>
        <%= f.text_area :caption,class:"form-control",rows:"3", placeholder:"説明" %>
        <hr>
        <%= f.submit '投稿', class:"btn btn-lg btn-block btn-success mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
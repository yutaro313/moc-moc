<h2>プロフィール編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!--アカウント編集時に名前を入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <!--アカウント編集時にメールアドレスを入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <!--アカウント編集時に画像を変更できるようにフォームを追加-->
  <div class="field">
    <%= f.label :プロフィール画像 %><br />
    <%= f.attachment_field :image %>
  </div>

  <!--アカウント編集時に趣味を入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :趣味 %><br />
    <%= f.text_field :hobby %>
  </div>

  <!--アカウント編集時に学習内容を入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :現在の学習内容 %><br />
    <%= f.text_field :learning %>
  </div>

   <!--アカウント編集時に一言を入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :一言 %><br />
    <%= f.text_field :a_word %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード %> <i>(変更したくない場合は空白のまま)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %> <i>(変更を確認するには、現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウントを削除しますか</h3>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "戻る", customer_path(@customer) %>
